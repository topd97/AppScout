<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginFragment">

    <TextView
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:text="Login:"
            android:textSize="20sp"
            android:id="@+id/textView_login_label"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.145"/>
    <TextView
            android:text="Senha:"
            android:layout_width="105dp"
            android:layout_height="34dp"
            android:textSize="20sp"
            android:id="@+id/textView_senha_label" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/username_input"
            app:layout_constraintVertical_bias="0.071" app:layout_constraintHorizontal_bias="0.501"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/senha_input" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_senha_label" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.102"/>
    <Button
            android:text="Entrar"
            android:layout_width="115dp"
            android:layout_height="56dp"
            android:id="@+id/button_log_in" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/senha_input" app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintVertical_bias="0.25" style="@style/Widget.AppCompat.Button.Colored"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/username_input" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_login_label" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Registrar"
            android:layout_width="111dp"
            android:layout_height="44dp"
            android:id="@+id/button3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_log_in" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.529" app:layout_constraintVertical_bias="0.512"
            style="@style/Widget.AppCompat.Button.Borderless"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="82dp" app:srcCompat="@mipmap/download"
            android:id="@+id/imageView" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="54dp"
            app:layout_constraintBottom_toTopOf="@+id/username_input" android:layout_marginStart="61dp"
            app:layout_constraintStart_toEndOf="@+id/textView_login_label"/>

</androidx.constraintlayout.widget.ConstraintLayout>